<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_registo_avaria"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etEquipamento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_tipo_equipamento"
            android:inputType="textCapWords"
            android:importantForAutofill="yes"
            android:autofillHints="name"
            android:background="@drawable/edit_text_bg"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etLocalizacao"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_localizacao"
            android:inputType="textCapWords"
            android:importantForAutofill="yes"
            android:autofillHints="postalAddress"
            android:background="@drawable/edit_text_bg"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etDescricao"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="@string/hint_descricao"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:importantForAutofill="yes"
            android:background="@drawable/edit_text_bg"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSubmeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_submeter"
            android:textColor="@android:color/white"
            android:background="@drawable/button_blue"
            android:minHeight="48dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAddFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Foto"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/preview_image"
            android:scaleType="centerCrop"/>
    </LinearLayout>
</ScrollView>